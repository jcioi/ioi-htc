ec2 "vpc-03eed691a6a5a03b2" do
  security_group "rproxy-cms-contest" do
    description "rproxy-cms-contest"

    ingress do
      permission :tcp, 80..80 do
        groups(
          "elb-cms-contest",
          "prometheus",
        )
        ip_ranges(
          *CIDR_SYSTEM,
        )
      end
    end

    egress do
      permission :any do
        ip_ranges(
          "0.0.0.0/0",
        )
      end
    end
  end
end
